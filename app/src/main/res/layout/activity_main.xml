<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vaishjanardhan.getquora.MainActivity"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/mission_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sizeEight"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="@dimen/sizeEight"
        android:text="@string/mission"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textTwentyFive" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/sizeEight">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/quora_image1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/quora_image3" />

    </RelativeLayout>

    <Button
        android:id="@+id/googlePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/sizeSixteen"
        android:background="@drawable/google_play"
        android:onClick="openPlayStore" />

    <Button
        android:id="@+id/appStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/sizeSixteen"
        android:background="@drawable/app_store"
        android:onClick="openAppStore" />

    <LinearLayout
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/sizeEight">

        <TextView
            android:id="@+id/web_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/webDescription"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sizeEight"
            android:autoLink="web"
            android:text="@string/webLink"
            android:textColorLink="@color/quoraRed"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>